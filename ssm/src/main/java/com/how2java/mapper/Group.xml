<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.how2java.mapper.GroupMapper">
    <insert id="add" parameterType="Group" >
	        insert into group1 ( id, name, charge ) values ( #{id}, #{name}, #{charge} )
	    </insert>

    <delete id="delete" parameterType="Group" >
	        delete from group1 where id= #{id}
	    </delete>

    <select id="get" parameterType="String" resultType="Group">
	        select * from   group1  where id= #{id}
	    </select>

    <update id="update" parameterType="Group" >
	        update group1 set name=#{name},charge=#{charge} where id=#{id}
	    </update>
    <select id="list" resultType="Group">
	        select * from   group1
	    </select>
</mapper>

