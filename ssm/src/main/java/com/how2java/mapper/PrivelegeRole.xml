<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.how2java.mapper.PrivelegeRoleMapper">
    <insert id="add" parameterType="PrivelegeRole" >
	        insert into pri_role ( id, pri_id, role_id ) values ( #{id}, #{pri_id}, #{role_id} )
	    </insert>

    <delete id="delete" parameterType="PrivelegeRole" >
	        delete from pri_role where id= #{id}
	    </delete>

    <select id="get" parameterType="String" resultType="PrivelegeRole">
	        select * from   pri_role  where id= #{id}
	    </select>

    <update id="update" parameterType="PrivelegeRole" >
	        update pri_role set pri_id=#{pri_id},role_id=#{role_id} where id=#{id}
	    </update>
    <select id="list" resultType="PrivelegeRole">
	        select * from   pri_role
	    </select>
</mapper>

