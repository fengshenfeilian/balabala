<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.how2java.mapper.UserMapper">
    <insert id="add" parameterType="User" >
	        insert into user ( id, name, pwd, birthday, gender ) values ( #{id}, #{name}, #{pwd}, #{birthday}, #{gender})
	    </insert>

    <delete id="delete" parameterType="User" >
	        delete from user where id= #{id}
	    </delete>

    <select id="get" parameterType="String" resultType="User">
	        select * from   user  where id= #{id}
	    </select>

    <update id="update" parameterType="User" >
	        update user set name=#{name},pwd=#{pwd},birthday=#{birthday},gender=#{gender} where id=#{id}
	    </update>
    <select id="list" resultType="User">
	        select * from   user
	    </select>
</mapper>

